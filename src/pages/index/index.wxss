/**index.wxss**/


.tips{
  color: #ffffff;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 20rpx;
  right: 20rpx;
  width: 300rpx;
  height: 60rpx;
  font-size: 26rpx;
  z-index: 100;
  background-color: #191919;
}

.dialog {
  color: #E0EBF9;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 10rpx;
  right: 130rpx;
  width: 30rpx;
  height: 30rpx;
  font-size: 26rpx;
  background-color: #191919;
  transform: rotate(45deg);
  z-index: 100;
}

.card {
  display: flex;
  background-color: #ffffff;
  flex-direction: row;
  margin: auto;
  margin-bottom: 10rpx;
  padding:40rpx;
  width: 670rpx;
  height: 120rpx;
  align-items: center;
  box-shadow: 0rpx 4rpx 12rpx 6rpx #E7E9EA;
}

.nav {
  display: flex;
  background-color: #08474B;
  /*background-image: url(https://ws3.sinaimg.cn/large/006tKfTcgy1ftynlo0qofj315o0g87eo.jpg);
  background-size: cover;*/
  width: 100%;
  height: 280rpx;
  padding: 40rpx 40rpx 30rpx 40rpx;
  box-sizing: border-box;
  flex-direction: column;
  margin-bottom: 20rpx;
  text-align: center;
  justify-content:flex-end;
}

.tag {
  display: flex;
  justify-content: center;
  color: #789596;
  background-color: #003437;
  border-radius: 6rpx;
  height: 54rpx;
  width: 120rpx;
  font-size: 28rpx;  
  align-items: center;
  flex-direction:row;
}

#title {
  font-size: 88rpx;
  display: flex;
  box-sizing: border-box;
  font-weight: 350;
  color: #ffffff;
  margin-left: 0rpx;
  text-align: left;
}

#data{
  font-size: 32rpx;
  color: #A3A8B3;
  margin: 0 0 0 0rpx;
  display: block;
  width: 100%;
  word-break:break-all;
  box-sizing: border-box;
}

#end{
  margin-top: 20rpx;
}

.line{
  flex-direction: column;
  box-sizing: border-box;
  display: flex;
  width: 494rpx;
  margin-left: 28rpx;
  font-size: 34rpx;
  color: #003F43;
  font-weight: 450;
}

.status{
  flex-direction: column;
  box-sizing: border-box;
  display: flex;
  text-align: right;
  margin-right: 0rpx;
  width: 148rpx;
  height: 116rpx
}

.status_null{
  display: flex;
  width: 148rpx;
  height: 116rpx;
  color: #768C93;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  text-align: right
}


#time{
  font-size: 56rpx;
  font-weight: 500;
  color: #ED6C00
}

.status-block {
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}

.status-tag {
  display: block;
  text-align: center;
  background-color: #E6E9ED;
  color : #9BA7B4;
  font-size: 26rpx;
  font-weight: 400rpx;
  height: 36rpx;
  width: 94rpx;
  border-radius: 2rpx;
}

.onRoad {
  display: block;
  text-align: center;
  background-color: #E0EBF9;
  color : #478DDE;
  font-size: 26rpx;
  font-weight: 400rpx;
  height: 36rpx;
  width: 94rpx;
  border-radius: 2rpx;
}
