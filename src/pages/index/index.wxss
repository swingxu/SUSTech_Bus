  flex-direction: column;
  box-sizing: border-box;
  display: flex;
  width: 12rpx;
  height: 80rpx;
  align-items: center;
  font-size: 34rpx;
}

.rectangle{
  width: 4rpx;
  height: 60rpx;
  background-color: #E8E9ED;
  
